/**app.wxss**/
page {
  background-color: #f8f7fad8;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.van-doc-card {
  background-color: #fff;
  border-radius: 2rem;
  box-shadow: 0 8px 12px #ebedf0;
  margin-bottom: 2rem;
  padding: 1rem;
}

.footer{
    position: fixed;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 99;
    margin-bottom: 3rem;
    border-radius:20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}