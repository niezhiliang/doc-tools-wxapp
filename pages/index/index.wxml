<view class="full-screen-container">
    <view class="title">易用PDF转换</view>
    <view class="grid-container">
        <view  wx:for="{{appList}}" wx:for-item="appGroup">
            <view class="app-group">{{appGroup.groupName}}</view>
            <van-grid gutter="8" column-num="4" icon-size="45" square="true">
                <van-grid-item
                wx:for="{{appGroup.appList}}" wx:for-item="app"
                key="{{app.appGroupId}}"
                text="{{app.appName}}"
                url="{{app.appUrl}}"
                icon="{{app.appIcon}}"
                custom-class="custom-grid-item"/>
            </van-grid>
        </view>
    </view>
</view>

