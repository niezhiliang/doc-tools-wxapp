<!-- 文件上传标题，提示用户使用的类型 -->

<view style="text-align: center;padding-top: 2rem; padding-bottom: 2rem;font-size: 1.5rem;">{{title}}</view>
<view class="van-doc-content">
  <view class="van-doc-card">
    <view class="jie-shao-title">{{msg}}</view>
<block wx:for="{{tips}}" wx:key="tip" wx:for-item="tip" wx:for-index="i">
    <view class="jie-shao-front">{{tip}}</view>
  </block>
</view>



 <!-- 打开弹框，让用户选择文件类型，也是增加广告时长 -->
<van-button icon="photo" type="primary" size="large" bind:click="openShow" class="footer">文件上传</van-button>

<van-action-sheet
  show="{{ show }}"
  actions="{{ actions }}"
  bind:close="onClose"
  bind:select="onSelect"
/>
</view>


